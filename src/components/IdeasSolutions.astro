---
const {
  title = "Tarjeta de prueba",
  content = "Esto es un texto de prueba para el componente de la tarjeta",
  imageSrc = "/images/brain.png",
} = Astro.props;
---

<div class="bg-[#f5faff] rounded-2xl p-4 shadow-sm relative transform transition duration-300 ease-in-out hover:shadow-md hover:-translate-y-1 w-full max-w-[260px] min-h-[260px] h-[260px] flex flex-col">
  <div class="absolute top-4 right-4 bg-white rounded-full w-10 h-10 flex items-center justify-center">
    <img
      src={imageSrc}
      alt="Ícono decorativo"
      class="w-8 h-8 object-contain"
    />
  </div>

  <div class="pt-10 flex flex-col flex-grow justify-between">
    <div>
      <h3 class="text-lg font-bold text-black mb-3">{title}</h3>
      <p class="text-sm text-gray-800 leading-relaxed">{content}</p>
    </div>
  </div>
</div>
