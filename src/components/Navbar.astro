---
// Navbar.astro - Premium navigation component
import { getLangFromUrl, useTranslations, languages } from '@/utils/i18n';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

export async function getStaticPaths() {
  return Object.keys(languages).map((loc) => ({
    params: { locate: loc },
  }));
}
---

<nav class="navbar-glass border-b border-blue-100 sticky top-0 z-50 transition-all duration-300" id="navbar">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      
      <!-- Premium Logo -->
      <div class="flex-shrink-0 flex items-center group">
        <a href="/" class="flex items-center space-x-3 hover:opacity-80 transition-opacity duration-200">
          <div class="w-10 h-10 gradient-bg rounded-lg flex items-center justify-center shadow-lg">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <div class="flex flex-col">
            <span class="text-xl font-bold text-gradient">{t('Navbar.title')}</span>
            <span class="text-xs text-gray-500 tracking-wide">{t('Navbar.subtitle')}</span>
          </div>
        </a>
      </div>

      <!-- Premium navigation links -->
      <div class="hidden md:block">
        <div class="flex items-center space-x-1">
          <a 
            href="/nosotros" 
            class="relative group px-4 py-2 text-gray-700 hover:text-blue-600 font-medium text-sm transition-all duration-200 rounded-lg hover:bg-blue-50"
          >
            {t('Navbar.about')}
            <span class="absolute bottom-0 left-1/2 w-0 h-0.5 bg-blue-600 transition-all duration-300 group-hover:w-full group-hover:left-0"></span>
          </a>
          <a 
            href="/producto" 
            class="relative group px-4 py-2 text-gray-700 hover:text-blue-600 font-medium text-sm transition-all duration-200 rounded-lg hover:bg-blue-50"
          >
            {t('Navbar.product')}
            <span class="absolute bottom-0 left-1/2 w-0 h-0.5 bg-blue-600 transition-all duration-300 group-hover:w-full group-hover:left-0"></span>
          </a>
          <a 
            href="/blog" 
            class="relative group px-4 py-2 text-gray-700 hover:text-blue-600 font-medium text-sm transition-all duration-200 rounded-lg hover:bg-blue-50"
          >
            {t('Navbar.blog')}
            <span class="absolute bottom-0 left-1/2 w-0 h-0.5 bg-blue-600 transition-all duration-300 group-hover:w-full group-hover:left-0"></span>
          </a>
        </div>
      </div>

      <!-- Premium CTA Button -->
      <div class="hidden md:block">
        <a 
          href="/contactanos" 
          class="btn-primary inline-flex items-center space-x-2 group"
        >
          <span>{t('Navbar.cta.text')}</span>
          <svg class="w-4 h-4 transition-transform duration-200 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>

      <!-- Enhanced mobile menu -->
      <div class="md:hidden">
        <button 
          type="button" 
          class="p-2 text-gray-700 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500"
          id="mobile-menu-button"
        >
          <svg class="h-6 w-6 transition-transform duration-200" id="menu-icon" stroke="currentColor" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Premium mobile menu -->
    <div class="md:hidden hidden transform transition-all duration-300 ease-in-out" id="mobile-menu">
      <div class="px-2 pt-4 pb-6 space-y-2 bg-white border-t border-blue-100 shadow-lg rounded-b-xl">
        <a 
          href="/nosotros" 
          class="flex items-center px-4 py-3 text-gray-700 hover:text-blue-600 hover:bg-blue-50 rounded-lg font-medium transition-all duration-200"
        >
          <svg class="w-5 h-5 mr-3 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
          {t('Navbar.about')}
        </a>
        <a 
          href="/producto" 
          class="flex items-center px-4 py-3 text-gray-700 hover:text-blue-600 hover:bg-blue-50 rounded-lg font-medium transition-all duration-200"
        >
          <svg class="w-5 h-5 mr-3 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
          </svg>
          {t('Navbar.product')}
        </a>
        <a 
          href="/blog" 
          class="flex items-center px-4 py-3 text-gray-700 hover:text-blue-600 hover:bg-blue-50 rounded-lg font-medium transition-all duration-200"
        >
          <svg class="w-5 h-5 mr-3 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
          </svg>
          {t('Navbar.blog')}
        </a>
        <a 
          href="/contactanos" 
          class="flex items-center justify-center mt-4 px-4 py-3 gradient-bg text-white rounded-lg font-medium transition-all duration-200 shadow-lg hover:shadow-xl"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          {t('Navbar.cta.text')}
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  // Enhanced mobile menu script with animations
  document.addEventListener('DOMContentLoaded', function() {
    const button = document.getElementById('mobile-menu-button');
    const menu = document.getElementById('mobile-menu');
    const icon = document.getElementById('menu-icon');
    const navbar = document.getElementById('navbar');
    
    // Mobile menu toggle
    if (button && menu && icon) {
      button.addEventListener('click', function() {
        const isHidden = menu.classList.contains('hidden');
        
        if (isHidden) {
          menu.classList.remove('hidden');
          menu.classList.add('animate-fade-in-up');
          // Change icon to X
          icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>';
        } else {
          menu.classList.add('hidden');
          menu.classList.remove('animate-fade-in-up');
          // Change icon to hamburger
          icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>';
        }
      });
    }
    
    // Navbar scroll effect
    if (navbar) {
      window.addEventListener('scroll', function() {
        if (window.scrollY > 100) {
          navbar.classList.add('bg-white/95', 'shadow-lg');
        } else {
          navbar.classList.remove('bg-white/95', 'shadow-lg');
        }
      });
    }
  });
</script> 