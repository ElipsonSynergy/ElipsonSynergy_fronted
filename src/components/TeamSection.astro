
---
const team = [
  {
    name: "Mateo Chilito",
    role: "CEO & Fundador",
    image: "/team/mateo.jpg",
    description: "Visionario líder con experiencia en transformación digital"
  },
  {
    name: "Laura Hurtado",
    role: "CMO",
    image: "/team/laura.jpg",
    description: "Estratega de marketing con enfoque en crecimiento sostenible"
  },
  {
    name: "Camilo Herrera",
    role: "CTO",
    image: "/team/brayan.jpg",
    description: "Arquitecto tecnológico especializado en soluciones escalables"
  },
  {
    name: "Franklin Romero",
    role: "CPO",
    image: "/team/frank.jpg",
    description: "Experto en experiencia de usuario y desarrollo de productos"
  }
];

import { getLangFromUrl, useTranslations, languages } from '@/utils/i18n';export async function getStaticPaths() {
  return Object.keys(languages).map((loc) => ({
    params: { locate: loc },
  }));
}

let lang = getLangFromUrl(Astro.url);


const t = useTranslations(lang);

---

<section class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-2 bg-blue-100 text-blue-600 font-semibold rounded-full text-sm mb-4">
        {t('teamSection.title')}
      </span>
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mt-4 mb-6">
        {t('teamSection.subtitle')} <span class="text-gradient">{t('teamSection.subtitle2')}</span>
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
        {t('teamSection.description')}
      </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      {team.map((member) => (
        <div class="group bg-white rounded-3xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2">
          <div class="w-full aspect-[3/4] overflow-hidden">
            <img 
              src={member.image} 
              alt={member.name} 
              class="w-full h-full object-cover object-top transition-transform duration-500 group-hover:scale-110" 
            />
          </div>

          <div class="p-6 text-center">
            <h3 class="text-xl font-bold text-gray-900 mb-1">{member.name}</h3>
            <p class="text-blue-600 font-semibold mb-3">{member.role}</p>
            <p class="text-gray-500 text-sm mb-6 leading-relaxed">{member.description}</p>

            <div class="flex justify-center gap-3 flex-wrap">
              <!-- Instagram -->
              <a href="#" class="group/icon w-10 h-10 bg-gray-100 rounded-full flex items-center justify-center hover:bg-gradient-to-br hover:from-pink-500 hover:via-red-500 hover:to-yellow-500 transition-all duration-300 transform hover:scale-110" aria-label="Instagram">
