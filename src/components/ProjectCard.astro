---
// ProjectCard.astro - Professional minimalist project card
export interface Props {
  project: {
    id: string;
    title: string;
    description: string;
    image: string;
    category: string;
    featured?: boolean;
  };
  translations?: (key: string) => string;
}

const { project, translations } = Astro.props;
const t = translations || ((key: string) => key);

// Generate thematic image URLs based on category
const getThematicImage = (category: string) => {
  const images = {
    agro: 'https://images.unsplash.com/photo-1625246333195-78d9c38ad449?w=500&h=300&fit=crop&crop=center&auto=format&q=85',
    jovenes: 'https://images.unsplash.com/photo-1529390079861-591de354faf5?w=500&h=300&fit=crop&crop=center&auto=format&q=85',
    store: 'https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?w=500&h=300&fit=crop&crop=center&auto=format&q=85',
    makers: 'https://images.unsplash.com/photo-1581092918056-0c4c3acd3789?w=500&h=300&fit=crop&crop=center&auto=format&q=85',
    software: 'https://images.unsplash.com/photo-1517180102446-f3ece451e9d8?w=500&h=300&fit=crop&crop=center&auto=format&q=85'
  };
  return images[category as keyof typeof images] || images.software;
};
---

<article 
  class="project-card group cursor-pointer bg-white rounded-3xl shadow-lg hover:shadow-2xl transition-all duration-500 overflow-hidden border border-gray-100/50 hover:border-blue-200/50 hover:-translate-y-2 relative"
  data-category={project.category}
  style="opacity: 1; transform: translateY(0); transition: opacity 0.3s ease, transform 0.3s ease;"
>
  <!-- Professional Image Section -->
  <div class="relative overflow-hidden h-52">
    <!-- High-quality thematic image -->
    <img 
      src={getThematicImage(project.category)}
      alt={project.title}
      class="w-full h-full object-cover transition-all duration-700 group-hover:scale-110 group-hover:brightness-110"
      loading="lazy"
    />
    
    <!-- Professional gradient overlay -->
    <div class="absolute inset-0 bg-gradient-to-b from-blue-600/5 via-transparent to-slate-900/30"></div>
    
    <!-- Elegant corner accent -->
    <div class="absolute top-4 right-4 w-10 h-10 bg-white/15 backdrop-blur-md rounded-xl border border-white/20 flex items-center justify-center group-hover:bg-white/25 transition-all duration-300">
      <div class="w-4 h-4 bg-blue-500 rounded opacity-80 group-hover:opacity-100 transition-opacity duration-300"></div>
    </div>
    
    <!-- Premium featured badge -->
    {project.featured && (
      <div class="absolute top-4 left-4 bg-gradient-to-r from-blue-600 to-blue-700 text-white px-3 py-1.5 rounded-xl text-xs font-bold shadow-xl backdrop-blur-sm border border-blue-400/20">
        <div class="flex items-center space-x-1">
          <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
          </svg>
          <span>{t('project_card.featured_badge')}</span>
        </div>
      </div>
    )}
    
    <!-- Sophisticated category indicator -->
    <div class="absolute bottom-4 left-4 bg-white/95 backdrop-blur-lg text-slate-700 px-4 py-2 rounded-2xl text-sm font-semibold shadow-lg border border-white/50 group-hover:bg-white transition-all duration-300">
      {project.category === 'agro' && (
        <div class="flex items-center space-x-2">
          <span class="text-green-600">üåæ</span>
          <span>{t('project_card.category_labels.agro')}</span>
        </div>
      )}
      {project.category === 'jovenes' && (
        <div class="flex items-center space-x-2">
          <span class="text-purple-600">üë•</span>
          <span>{t('project_card.category_labels.jovenes')}</span>
        </div>
      )}
      {project.category === 'store' && (
        <div class="flex items-center space-x-2">
          <span class="text-orange-600">üõçÔ∏è</span>
          <span>{t('project_card.category_labels.store')}</span>
        </div>
      )}
      {project.category === 'makers' && (
        <div class="flex items-center space-x-2">
          <span class="text-amber-600">üîß</span>
          <span>{t('project_card.category_labels.makers')}</span>
        </div>
      )}
      {project.category === 'software' && (
        <div class="flex items-center space-x-2">
          <span class="text-blue-600">üíª</span>
          <span>{t('project_card.category_labels.software')}</span>
        </div>
      )}
    </div>

    <!-- Premium hover overlay -->
    <div class="absolute inset-0 bg-gradient-to-t from-blue-600/0 to-blue-600/0 group-hover:from-blue-600/10 group-hover:to-transparent transition-all duration-500"></div>
  </div>

  <!-- Professional Content Section -->
  <div class="p-6 space-y-4">
    <!-- Project Title -->
    <h3 class="text-xl font-bold text-slate-900 group-hover:text-blue-600 transition-colors duration-300 leading-tight tracking-tight">
      {project.title}
    </h3>
    
    <!-- Professional Description -->
    <p class="text-slate-600 text-sm leading-relaxed line-clamp-2 font-medium">
      {project.description}
    </p>
    
    <!-- Divider -->
    <div class="w-full h-px bg-gradient-to-r from-transparent via-slate-200 to-transparent"></div>
    
    <!-- Professional Action Section -->
    <div class="flex items-center justify-between pt-2">
      <!-- Status Indicator -->
      <div class="flex items-center space-x-2">
        <div class="w-2 h-2 bg-emerald-500 rounded-full animate-pulse shadow-sm"></div>
        <span class="text-xs font-medium text-slate-500 tracking-wide">{t('project_card.status_active')}</span>
      </div>
      
      <!-- Premium CTA -->
      <button class="group/btn flex items-center space-x-2 bg-gradient-to-r from-blue-50 to-blue-100/50 hover:from-blue-100 hover:to-blue-150 text-blue-700 hover:text-blue-800 px-4 py-2.5 rounded-xl font-semibold text-sm transition-all duration-300 border border-blue-200/50 hover:border-blue-300/50 shadow-sm hover:shadow-md">
        <span class="tracking-wide">{t('project_card.explore_button')}</span>
        <svg class="w-4 h-4 transition-all duration-300 group-hover/btn:translate-x-0.5 group-hover/btn:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </button>
    </div>
  </div>
  
  <!-- Subtle decorative element -->
  <div class="absolute bottom-0 right-0 w-20 h-20 bg-gradient-to-br from-blue-50/50 to-transparent rounded-tl-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style> 