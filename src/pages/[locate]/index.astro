        <!-- Stats - Only show if we have real data -->
        {(totalProjects > 0 || totalMembers > 0) && (
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 max-w-3xl mx-auto">
            <div class="text-center">
