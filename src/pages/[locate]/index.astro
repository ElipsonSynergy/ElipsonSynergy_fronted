      <IdeasSolutionsCard title={t('index.features.solutionsCards.scalability.title')} content={t('index.features.solutionsCards.scalability.description')} imageSrc="/images/Scalability.png"/>
      <IdeasSolutionsCard title={t('index.features.solutionsCards.improvementCulture.title')} content={t('index.features.solutionsCards.improvementCulture.description')} imageSrc="/images/Culture.png"/>
      <IdeasSolutionsCard title={t('index.features.solutionsCards.genuineCommitment.title')} content={t('index.features.solutionsCards.genuineCommitment.description')} imageSrc="/images/Compromise.png"/>
    </div>
  </div>

  <br>
  <br>
  <br>

<!-- Latin-America section -->
<section class="relative w-full flex flex-col lg:flex-row overflow-hidden
                lg:h-[500px]">     <!-- altura fija solo en desktop -->

  <!-- Bloque de texto -->
  <div
    class="flex-1 flex items-center justify-center
           px-4 sm:px-6 lg:px-10       
           py-12 lg:py-0">       
    <div class="w-full max-w-full md:max-w-md text-center lg:text-left">
      <h1
        class="font-extrabold leading-tight
               text-3xl sm:text-4xl lg:text-5xl xl:text-6xl
               text-black mb-4">
        {t('index.latinAmerica.title')}<br />
        {t('index.latinAmerica.subtitle')}
      </h1>

      <p class="text-base sm:text-lg text-gray-700">
