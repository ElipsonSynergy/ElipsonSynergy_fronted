              <div class="text-center">
                <div class="text-4xl font-bold text-blue-600 mb-2">{totalMembers}</div>
                <div class="text-gray-600 font-medium">{t('index.hero.stats.team')}</div>
              </div>
            )}
            {totalProjects > 0 && (
              <div class="text-center">
                <div class="text-4xl font-bold text-blue-600 mb-2">{totalProjects}</div>
