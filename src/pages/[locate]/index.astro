---
// index.astro - Premium main page
import BaseLayout from '../../layouts/BaseLayout.astro';
import IdeasSolutionsCard from '@/components/IdeasSolutions.astro';
import type { MiddlewareHandler } from 'astro';
import 'swiper/css';
import 'swiper/css/navigation';
import 'swiper/css/pagination';
import TeamCarousel from '@/components/MemberSwiper.jsx';
import { getAllMembersServer, localizeMembers } from '../../lib/membersFirebase';
import { getLangFromUrl, useTranslations, languages, getLocalizedPath } from '@/utils/i18n';
import type { SupportedLanguage } from '../../types/firebase';
import ElipsonTitle from '@/components/ElipsonTitle.astro';
import FuturoBanner from '@/components/FutureBanner.astro';

export const onRequest: MiddlewareHandler = (ctx, next) => {
  const { pathname } = new URL(ctx.request.url);
  if (pathname === '/') return ctx.redirect('/es/', 301);
  return next();
};

export async function getStaticPaths() {
  return Object.keys(languages).map((loc) => ({
    params: { locate: loc },
  }));
}

let lang = getLangFromUrl(Astro.url);

const t = useTranslations(lang);

// Function to generate localized links
function getLocalizedLink(path: string) {
  return getLocalizedPath(path, lang);
}

// Get members from Firebase
const firebaseMembers = await getAllMembersServer();
const members = localizeMembers(firebaseMembers, lang as SupportedLanguage);

// Get featured projects from Firebase
import { getAllProjectsServer, localizeProjects } from '../../lib/projectsFirebase';
const firebaseProjects = await getAllProjectsServer();
const allProjects = localizeProjects(firebaseProjects, lang as SupportedLanguage);
const featuredProjects = allProjects.filter(project => project.featured).slice(0, 3);

// Calculate real statistics from Firebase data
const totalProjects = firebaseProjects.length;
const totalMembers = firebaseMembers.length;
const foundedYear = 2024; // This is a real fact about the company
---

<BaseLayout 
  title={t('index.meta.title')} 
  description="Descubre las soluciones tecnológicas más innovadoras con Elipson Synergy. Transformamos ideas en realidad digital con tecnología de vanguardia."
  keywords="tecnología, innovación, desarrollo software, soluciones digitales, transformación digital"
>
  <!-- Premium Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Gradient and pattern background -->
    <div class="absolute inset-0 bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50"></div>
    <div class="absolute inset-0 opacity-5">
      <div class="grid grid-cols-12 gap-4 h-full">
        <div class="bg-blue-200 rounded opacity-20"></div>
        <div class="bg-blue-300 rounded opacity-10"></div>
      </div>
    </div>
    
    <!-- Floating decorative elements -->
    <div class="absolute top-20 left-10 w-20 h-20 bg-blue-200 rounded-full opacity-20 animate-pulse"></div>
    <div class="absolute top-40 right-20 w-32 h-32 bg-indigo-200 rounded-full opacity-20 animate-pulse delay-300"></div>
    <div class="absolute bottom-20 left-20 w-16 h-16 bg-purple-200 rounded-full opacity-20 animate-pulse delay-700"></div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="animate-fade-in-up">
        <!-- Badges -->
        <div class="inline-flex items-center px-4 py-2 bg-blue-100 text-blue-800 rounded-full text-sm font-medium mt-4" style="margin-bottom: 0px;">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
          {t('index.hero.badge')}
        </div>

        <ElipsonTitle/>
        
        <!-- Main title -->
        <h1 class="hero-title text-5xl md:text-7xl font-extrabold mb-6 leading-tight">
          <span class="block text-gray-900">{t('index.hero.title1')}</span>
          <span class="block text-gradient mt-2">{t('index.hero.title2')}</span>
        </h1>
        
        <!-- Subtitle -->
        <p class="max-w-3xl mx-auto text-xl md:text-2xl text-gray-600 mb-12 leading-relaxed">
          {t('index.hero.subtitle')}
        </p>
        
        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-16">
          <a 
            href={getLocalizedLink('/contactanos')} 
            class="btn-primary text-lg px-8 py-4 group min-w-[200px]"
          >
            <span>{t('index.hero.cta1')}</span>
            <svg class="w-5 h-5 ml-2 transition-transform duration-200 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
          <a 
            href={getLocalizedLink('/producto')} 
            class="btn-secondary text-lg px-8 py-4 group min-w-[200px]"
          >
            <span>{t('index.hero.cta2')}</span>
            <svg class="w-5 h-5 ml-2 transition-transform duration-200 group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
            </svg>
          </a>
