    <br>
    <br>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
        <h2 class="text-3xl sm:text-4xl font-extrabold text-black leading-tight">
          {t('index.features.transform.title')}
        </h2>
        <p class="text-base sm:text-lg text-gray-800">
          {t('index.features.transform.description')}
        </p>
      </div>
    </div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 place-items-center">
      <IdeasSolutionsCard title={t('index.features.solutionsCards.listen.title')} content={t('index.features.solutionsCards.listen.description')} imageSrc="/images/ActiveListen.png"/>
      <IdeasSolutionsCard title={t('index.features.solutionsCards.humanCentered.title')} content={t('index.features.solutionsCards.humanCentered.description')} imageSrc="/images/SelfCentered.png"/>
