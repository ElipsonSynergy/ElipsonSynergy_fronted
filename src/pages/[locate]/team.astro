
---
import BaseLayout from '@/layouts/BaseLayout.astro';
import TeamSection from '@/components/TeamSection.astro';
import { getLangFromUrl, useTranslations, languages } from '@/utils/i18n';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

export async function getStaticPaths() {
  return Object.keys(languages).map((loc) => ({
    params: { locate: loc },
  }));
}

---
<BaseLayout 
  title={t('teamSection.title')} 
  description={t('teamSection.description')}
>
  <TeamSection />
</BaseLayout>