
---
import BaseLayout from '@/layouts/BaseLayout.astro';
import TeamSection from '@/components/TeamSection.astro';

export async function getStaticPaths() {
  return [
    { params: { locate: 'es' } },
    { params: { locate: 'en' } },
    { params: { locate: 'por' } }
  ];
}

const { locate } = Astro.params;
const lang = (locate as 'es' | 'en' | 'por') || 'es';

---
<BaseLayout 
  title="Nuestro Equipo - Elipson Synergy" 
  description="Conoce al equipo detrás de Elipson Synergy. Profesionales apasionados creando soluciones tecnológicas innovadoras."
>
  <TeamSection />
</BaseLayout>