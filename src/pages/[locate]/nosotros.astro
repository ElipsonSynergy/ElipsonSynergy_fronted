---
import BaseLayout from '../../layouts/BaseLayout.astro';
import TeamCarousel from '@/components/MemberSwiper';
import TeamCarouselDetailed from '@/components/MemberSwiperDetailed';
import MembersInfoDetailed from '@/components/MembersInfoDetailed'
import { getLangFromUrl, useTranslations, languages } from '@/utils/i18n';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

export async function getStaticPaths() {
  return Object.keys(languages).map((loc) => ({
    params: { locate: loc },
  }));
}

---

<BaseLayout 
  title={t('about.title')}
  description={t('about.description')}
  keywords={t('about.keywords')}
>
  <section class="relative py-28 overflow-hidden">
    <div class="absolute top-20 left-10 w-20 h-20 bg-blue-200 rounded-full opacity-20 animate-pulse"></div>
    <div class="absolute top-40 right-20 w-32 h-32 bg-indigo-200 rounded-full opacity-20 animate-pulse delay-300"></div>
    <div class="absolute bottom-20 left-20 w-16 h-16 bg-purple-200 rounded-full opacity-20 animate-pulse delay-700"></div>
    <div class="absolute inset-0 bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 z-0"></div>
    <div class="absolute top-0 right-0 w-64 h-64 bg-gradient-to-br from-blue-100 to-transparent rounded-full blur-3xl opacity-30 animate-float-slow z-0"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center z-10">
      <div class="animate-fade-in-up">
        <div class="inline-flex items-center px-4 py-2 bg-blue-100 text-blue-800 rounded-full text-sm font-medium mb-8 shadow-sm">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
          {t('about.Elipson.title')}
        </div>
        <h1 class="text-5xl md:text-6xl font-extrabold mb-6 leading-tight">
          <span class="block text-gray-900">{t('about.Elipson.subtitle')}</span>
          <span class="block text-gradient bg-gradient-to-r from-blue-500 via-indigo-500 to-purple-500 bg-clip-text text-transparent mt-2">
            {t('about.Elipson.tagline')}
          </span>
        </h1>
        <p class="max-w-3xl mx-auto text-xl md:text-2xl text-gray-700 mb-12 leading-relaxed">
          {t('about.Elipson.description')}
          {t('about.Elipson.description2')} <strong>{t('about.Elipson.description3')}</strong> {t('about.Elipson.description4')}
        </p>
      </div>
    </div>
  </section>


  <section class="bg-white py-24 px-6 sm:px-10 lg:px-20">
  <div class="max-w-7xl mx-auto text-center mb-16">
    <h2 class="text-4xl font-extrabold text-gray-900 mb-4">{t('about.essence.title')}</h2>
    <p class="text-lg text-gray-600">
      {t('about.essence.description')}
    </p>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10">

    <div class="bg-blue-50 rounded-xl p-8 shadow-md hover:shadow-xl transition-shadow duration-300">
      <h3 class="text-2xl font-bold text-blue-700 mb-3">{t('about.Mission.title')}</h3>
      <p class="text-gray-700 leading-relaxed">
        {t('about.Mission.description')}
      </p>
    </div>

    <div class="bg-indigo-50 rounded-xl p-8 shadow-md hover:shadow-xl transition-shadow duration-300">
      <h3 class="text-2xl font-bold text-indigo-700 mb-3">{t('about.Vision.title')}</h3>
      <p class="text-gray-700 leading-relaxed">
        {t('about.Vision.description')}
      </p>
    </div>

    <div class="bg-purple-50 rounded-xl p-8 shadow-md hover:shadow-xl transition-shadow duration-300">
      <h3 class="text-2xl font-bold text-purple-700 mb-3">{t('about.values.title')}</h3>
      <ul class="text-gray-700 leading-relaxed list-disc list-inside">
        <li>{t('about.values.innovation.title')}</li>
        <li>{t('about.values.collaboration.title')}</li>
        <li>{t('about.values.socialEmpathy.title')}</li>
        <li>{t('about.values.transparency.title')}</li>
        <li>{t('about.values.excellence.title')}</li>
      </ul>
    </div>
  </div>
</section>
<section class="bg-white py-24 px-6 sm:px-10 lg:px-20">
    <div class="max-w-7xl mx-auto text-center mb-16">
    <h2 class="text-4xl font-extrabold text-gray-900 mb-4">{t('about.teamSection.title')}</h2>    
  </div>
<TeamCarouselDetailed client:load />

</section>



</BaseLayout>