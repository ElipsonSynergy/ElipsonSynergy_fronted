---
import BaseLayout from '../../layouts/BaseLayout.astro';
import TeamCarousel from '@/components/MemberSwiper';
import TeamCarouselDetailed from '@/components/MemberSwiperDetailed';
import MembersInfoDetailed from '@/components/MembersInfoDetailed'
import { getAllMembersServer, localizeMembers } from '../../lib/membersFirebase';
import { getLangFromUrl, useTranslations, languages } from '@/utils/i18n';
import type { SupportedLanguage } from '../../types/firebase';

export async function getStaticPaths() {
  return Object.keys(languages).map((loc) => ({
    params: { locate: loc },
  }));
}

let lang = getLangFromUrl(Astro.url);

const t = useTranslations(lang);

// Get members from Firebase
const firebaseMembers = await getAllMembersServer();
const members = localizeMembers(firebaseMembers, lang as SupportedLanguage);

---

<BaseLayout 
  title={t('about_page_meta.title')}
  description={t('about_page_meta.description')}
  keywords={t('about_page_meta.keywords')}
  title={t('about.title')}
  description={t('about.description')}
  keywords={t('about.keywords')}
>
  <!-- Hero Section Mejorado -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Animated Background Elements -->
    <div class="absolute top-20 left-10 w-32 h-32 bg-gradient-to-br from-blue-400 to-blue-600 rounded-full opacity-10 animate-pulse"></div>
    <div class="absolute top-1/3 right-20 w-48 h-48 bg-gradient-to-br from-indigo-400 to-purple-600 rounded-full opacity-10 animate-pulse delay-300"></div>
    <div class="absolute bottom-32 left-20 w-24 h-24 bg-gradient-to-br from-purple-400 to-pink-600 rounded-full opacity-10 animate-pulse delay-700"></div>
    <div class="absolute top-1/4 left-1/3 w-16 h-16 bg-gradient-to-br from-cyan-400 to-blue-600 rounded-full opacity-10 animate-pulse delay-500"></div>
    
    <!-- Enhanced Gradient Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-blue-50 via-indigo-50 via-purple-50 to-pink-50 z-0"></div>
    <div class="absolute top-0 right-0 w-96 h-96 bg-gradient-to-br from-blue-100 via-indigo-100 to-transparent rounded-full blur-3xl opacity-40 animate-float-slow z-0"></div>
    <div class="absolute bottom-0 left-0 w-80 h-80 bg-gradient-to-tr from-purple-100 via-pink-100 to-transparent rounded-full blur-3xl opacity-40 animate-float-slow delay-1000 z-0"></div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center z-10">
      <div class="animate-fade-in-up">
        <!-- Enhanced Badge -->
        <div class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-blue-100 to-indigo-100 text-blue-800 rounded-full text-sm font-medium mb-8 shadow-lg backdrop-blur-sm border border-blue-200">
          <svg class="w-5 h-5 mr-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
          {t('about_hero_section.badge')}
        </div>
        
        <!-- Enhanced Title -->
        <h1 class="text-6xl md:text-7xl lg:text-8xl font-extrabold mb-8 leading-tight">
          <span class="block text-gray-900 mb-2">{t('about_hero_section.title_line1')}</span>
          <span class="block bg-gradient-to-r from-blue-600 via-indigo-600 via-purple-600 to-pink-600 bg-clip-text text-transparent animate-gradient-x">
            {t('about_hero_section.title_line2')}
          </span>
        </h1>
        
        <!-- Enhanced Description -->
        <p class="max-w-4xl mx-auto text-xl md:text-2xl text-gray-700 mb-12 leading-relaxed font-light" set:html={t('about_hero_section.description')}>
        </p>
        
        <!-- Enhanced CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-16">
          <a href="#story" class="group px-8 py-4 bg-gradient-to-r from-blue-600 to-indigo-600 text-white rounded-full font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300">
            <span class="flex items-center">
              Conoce Nuestra Historia
              <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </span>
          </a>
          <a href="#team" class="px-8 py-4 border-2 border-gray-300 text-gray-700 rounded-full font-semibold hover:border-indigo-600 hover:text-indigo-600 transition-all duration-300">
            Conoce al Equipo
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Nueva Sección de Historia -->
  <section id="story" class="relative py-24 bg-white overflow-hidden">
    <div class="absolute top-0 left-0 w-full h-2 bg-gradient-to-r from-blue-500 via-indigo-500 to-purple-500"></div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <!-- Texto de Historia -->
        <div class="space-y-8">
          <div>
            <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
              {t('about_story_section.title')}
            </h2>
            <p class="text-xl text-indigo-600 font-medium mb-8">
              {t('about_story_section.subtitle')}
            </p>
          </div>
          
          <div class="space-y-6 text-lg text-gray-700 leading-relaxed">
            <p>{t('about_story_section.content')}</p>
            <p>{t('about_story_section.content2')}</p>
            
            <div class="bg-gradient-to-r from-blue-50 to-indigo-50 p-6 rounded-xl border-l-4 border-indigo-500">
              <p class="text-xl font-semibold text-indigo-900 italic">
                "{t('about_story_section.highlight')}"
              </p>
            </div>
          </div>
        </div>
        
        <!-- Visual Element -->
        <div class="relative">
          <div class="relative z-10 bg-gradient-to-br from-blue-100 via-indigo-100 to-purple-100 rounded-3xl p-8 shadow-2xl">
            <!-- Mapa Ilustrativo de Latinoamérica -->
            <div class="grid grid-cols-3 gap-4 mb-8">
              <div class="h-16 bg-gradient-to-br from-blue-400 to-blue-600 rounded-lg flex items-center justify-center">
                <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              </div>
              <div class="h-16 bg-gradient-to-br from-indigo-400 to-indigo-600 rounded-lg flex items-center justify-center">
                <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M9 11H7l3-7 3 7h-2a3 3 0 0 1-3 3 3 3 0 0 1-3-3Z"/>
                </svg>
              </div>
              <div class="h-16 bg-gradient-to-br from-purple-400 to-purple-600 rounded-lg flex items-center justify-center">
                <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 15v-2h2v2h-2zm2-4v2h-2v-2c0-1.1.9-2 2-2s2 .9 2 2v2z"/>
                </svg>
              </div>
            </div>
            
            <div class="text-center">
              <h3 class="text-2xl font-bold text-gray-800 mb-4">Desde Colombia para el Mundo</h3>
              <p class="text-gray-600">Conectando talentos, creando soluciones, transformando realidades</p>
            </div>
          </div>
          
          <!-- Elementos decorativos flotantes -->
          <div class="absolute -top-4 -right-4 w-20 h-20 bg-gradient-to-br from-yellow-400 to-orange-500 rounded-full opacity-20 animate-pulse"></div>
          <div class="absolute -bottom-6 -left-6 w-16 h-16 bg-gradient-to-br from-green-400 to-teal-500 rounded-full opacity-20 animate-pulse delay-500"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Nueva Sección de Cultura -->
  <section class="py-24 bg-gradient-to-br from-gray-50 to-blue-50 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-r from-blue-100/20 to-purple-100/20"></div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          {t('about_culture_section.title')}
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          {t('about_culture_section.subtitle')}
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {JSON.parse(JSON.stringify(t('about_culture_section.principles'))).map((principle: any, index: number) => (
          <div class="group relative bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 border border-gray-100">
            <!-- Icono decorativo -->
            <div class="absolute -top-6 left-8">
              <div class={`w-12 h-12 rounded-full flex items-center justify-center text-white font-bold text-lg ${
                index === 0 ? 'bg-gradient-to-br from-yellow-400 to-orange-500' :
                index === 1 ? 'bg-gradient-to-br from-red-400 to-pink-500' :
                index === 2 ? 'bg-gradient-to-br from-green-400 to-teal-500' :
                'bg-gradient-to-br from-purple-400 to-indigo-500'
              }`}>
                {index + 1}
              </div>
            </div>
            
            <div class="pt-6">
              <h3 class="text-xl font-bold text-gray-900 mb-4 group-hover:text-indigo-600 transition-colors duration-300">
                {principle.title}
              </h3>
              <p class="text-gray-600 leading-relaxed">
                {principle.description}
              </p>
            </div>
            
            <!-- Elemento decorativo hover -->
            <div class="absolute inset-0 bg-gradient-to-br from-indigo-500/5 to-purple-500/5 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Sección de Esencia Rediseñada -->
  <section class="relative py-24 bg-white overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-blue-50/50 via-transparent to-purple-50/50"></div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-20">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          {t('about_essence_section.title')}
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
          {t('about_essence_section.subtitle')}
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        <!-- Misión -->
        <div class="group relative">
          <div class="absolute inset-0 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-3xl transform rotate-3 group-hover:rotate-6 transition-transform duration-500 opacity-10"></div>
          <div class="relative bg-white rounded-3xl p-10 shadow-2xl border border-gray-100 hover:shadow-3xl transition-all duration-500 group-hover:-translate-y-2">
            <div class="flex items-center mb-6">
              <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-2xl flex items-center justify-center mr-4">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
              <h3 class="text-3xl font-bold text-gray-900">{t('about_essence_section.mission.title')}</h3>
            </div>
            <p class="text-gray-700 leading-relaxed text-lg">
              {t('about_essence_section.mission.description')}
            </p>
          </div>
        </div>

        <!-- Visión -->
        <div class="group relative">
          <div class="absolute inset-0 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-3xl transform -rotate-2 group-hover:-rotate-4 transition-transform duration-500 opacity-10"></div>
          <div class="relative bg-white rounded-3xl p-10 shadow-2xl border border-gray-100 hover:shadow-3xl transition-all duration-500 group-hover:-translate-y-2">
            <div class="flex items-center mb-6">
              <div class="w-16 h-16 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-2xl flex items-center justify-center mr-4">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
              </div>
              <h3 class="text-3xl font-bold text-gray-900">{t('about_essence_section.vision.title')}</h3>
            </div>
            <p class="text-gray-700 leading-relaxed text-lg">
              {t('about_essence_section.vision.description')}
            </p>
          </div>
        </div>

        <!-- Valores -->
        <div class="group relative">
          <div class="absolute inset-0 bg-gradient-to-br from-purple-500 to-pink-600 rounded-3xl transform rotate-1 group-hover:rotate-3 transition-transform duration-500 opacity-10"></div>
          <div class="relative bg-white rounded-3xl p-10 shadow-2xl border border-gray-100 hover:shadow-3xl transition-all duration-500 group-hover:-translate-y-2">
            <div class="flex items-center mb-6">
              <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-pink-600 rounded-2xl flex items-center justify-center mr-4">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                </svg>
              </div>
              <h3 class="text-3xl font-bold text-gray-900">{t('about_essence_section.values.title')}</h3>
            </div>
            <div class="space-y-4">
              {JSON.parse(JSON.stringify(t('about_essence_section.values.list'))).map((value: string, index: number) => (
                <div class="flex items-center">
                  <div class={`w-3 h-3 rounded-full mr-3 ${
                    index === 0 ? 'bg-blue-500' :
                    index === 1 ? 'bg-indigo-500' :
                    index === 2 ? 'bg-purple-500' :
                    index === 3 ? 'bg-pink-500' :
                    'bg-violet-500'
                  }`}></div>
                  <span class="text-gray-700 font-medium">{value}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<!-- Sección del Equipo Mejorada -->
<section id="team" class="relative py-24 bg-gradient-to-br from-indigo-50 via-purple-50 to-pink-50 overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-r from-indigo-100/30 to-purple-100/30"></div>
  
  <!-- Elementos decorativos flotantes -->
  <div class="absolute top-20 left-10 w-24 h-24 bg-gradient-to-br from-blue-400 to-indigo-500 rounded-full opacity-20 animate-pulse"></div>
  <div class="absolute bottom-20 right-20 w-32 h-32 bg-gradient-to-br from-purple-400 to-pink-500 rounded-full opacity-20 animate-pulse delay-1000"></div>
  <div class="absolute top-1/2 right-10 w-16 h-16 bg-gradient-to-br from-indigo-400 to-purple-500 rounded-full opacity-20 animate-pulse delay-500"></div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-20">
      <div class="inline-flex items-center px-4 py-2 bg-white/80 backdrop-blur-sm rounded-full text-sm font-medium text-indigo-600 mb-8 shadow-lg">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
        Nuestro Equipo
      </div>
      
      <h2 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6">
        {t('about_team_section.title')}
      </h2>
      
      <p class="text-xl text-gray-600 max-w-4xl mx-auto leading-relaxed mb-4">
        {t('about_team_section.subtitle')}
      </p>
      
      <p class="text-lg text-gray-600 max-w-3xl mx-auto leading-relaxed">
        {t('about_team_section.description')}
      </p>
    </div>

    <!-- Componente del equipo con fondo mejorado -->
    <div class="relative">
      <div class="absolute inset-0 bg-white/40 backdrop-blur-sm rounded-3xl"></div>
      <div class="relative z-10 p-8 rounded-3xl">
        <TeamCarouselDetailed client:load lang={lang} members={members} />
      </div>
    </div>
  </div>
</section>



</BaseLayout>