---
export const prerender = false;

import { Image } from "astro:assets";
import { format } from "date-fns";
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { useTranslations } from '../../../utils/i18n';
import type { PostType } from "../../../types";

// 1. Extraemos el slug de la URL
const { slug } = Astro.params as { slug: string };

// 2. Obtener idioma de la URL
const { locate } = Astro.params;
const lang = (locate as 'es' | 'en' | 'por') || 'es';
const t = useTranslations(lang);

// 3. Fetch al endpoint de detalle (y aqu√≠ la API ya incrementa views)
const postRes = await fetch(`http://localhost:8000/api/posts/slug/${slug}`);
if (!postRes.ok) throw new Error(`Post no encontrado: ${slug}`);
const post: PostType = await postRes.json();

// 4. (Opcional) Traer posts populares
const popRes = await fetch(`http://localhost:8000/api/posts/popular?limit=5`);
const populares: PostType[] = popRes.ok ? await popRes.json() : [];
---

<BaseLayout title={`${post.title} | Blog Squair`} description={post.summary}>
  <!-- Hero Banner Section with Modern Design -->
  <section class="relative py-24 lg:py-32 bg-gradient-to-br from-slate-900 via-blue-900 to-indigo-900 overflow-hidden">
    <!-- Background Image Overlay -->
    <div class="absolute inset-0">
      <Image
        src={post.imageUrl ?? "/fallback-post-image.png"}
        alt={post.title}
        width={1920}
        height={1080}
        class="w-full h-full object-cover opacity-30"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-slate-900/80 via-slate-900/40 to-transparent"></div>
    </div>

    <!-- Floating Background Elements -->
    <div class="absolute inset-0 opacity-10">
      {Array.from({length: 20}).map((_, i) => (
        <div 
          class="absolute w-1 h-1 bg-white rounded-full animate-pulse"
          style={`top: ${Math.random() * 100}%; left: ${Math.random() * 100}%; animation-delay: ${Math.random() * 3}s`}
        ></div>
      ))}
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Post Meta Information -->
      <div class="flex items-center justify-center space-x-6 text-blue-200 mb-8">
        <div class="flex items-center space-x-3">
          <Image
            src={post.author.avatarUrl ?? "/fallback-avatar.png"}
            alt={post.author.name}
            width={40}
            height={40}
            class="w-10 h-10 rounded-full border-2 border-blue-300/50"
          />
          <span class="font-semibold">By {post.author.name}</span>
        </div>
        
        <div class="flex items-center space-x-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <time class="font-medium">
            {format(new Date(post.createdAt), "dd MMM yyyy")}
          </time>
        </div>
        
        <div class="flex items-center space-x-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
          <span class="font-medium">{post.views} vistas</span>
        </div>
      </div>

      <!-- Post Title -->
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-black text-white text-center mb-8 leading-tight tracking-tight">
        {post.title}
      </h1>

      <!-- Post Tags -->
      <div class="flex flex-wrap justify-center gap-3">
        {post.tags.map((tag) => (
          <a 
            href={`/${lang}/blog?tag=${encodeURIComponent(tag.name)}`}
            class="px-4 py-2 bg-blue-600/80 hover:bg-blue-600 text-white rounded-full text-sm font-semibold transition-all duration-300 hover:scale-105 backdrop-blur-sm"
          >
            {tag.name.toUpperCase()}
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Main Content Section -->
  <section class="relative py-16 bg-white">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-5">
      <div style="background-image: radial-gradient(circle at 1px 1px, rgba(59,130,246,0.15) 1px, transparent 0); background-size: 40px 40px;"></div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        <!-- Main Content -->
        <article class="lg:col-span-2">
          <div class="bg-white rounded-3xl shadow-xl border border-slate-200 p-8 lg:p-12">
            <!-- Post Content -->
            <div class="prose prose-lg prose-slate max-w-none prose-headings:text-slate-900 prose-headings:font-bold prose-p:text-slate-700 prose-p:leading-relaxed prose-a:text-blue-600 prose-a:font-semibold hover:prose-a:text-blue-700 prose-strong:text-slate-900 prose-code:text-blue-600 prose-code:bg-blue-50 prose-code:px-2 prose-code:py-1 prose-code:rounded prose-pre:bg-slate-900 prose-pre:text-slate-100" 
                 set:html={post.content} />
          </div>
        </article>

        <!-- Sidebar -->
        <aside class="lg:col-span-1">
          <div class="bg-gradient-to-br from-slate-50 to-blue-50 rounded-3xl shadow-xl border border-slate-200 p-8 sticky top-8">
            <h2 class="text-2xl font-bold text-slate-900 mb-8 text-center">
              {t('blogDetail.popular')}
            </h2>
            
            <div class="space-y-6">
              {populares.map((popular, index) => (
                <div class="group">
                  <a href={`/blog/${popular.slug}`} class="flex items-start space-x-4 p-4 rounded-2xl bg-white/80 hover:bg-white hover:shadow-lg transition-all duration-300 hover:-translate-y-1">
                    <div class="flex-shrink-0">
                      <Image
                        src={popular.imageUrl ?? "/fallback-post-image.png"}
                        alt={popular.title}
                        width={64}
                        height={64}
                        class="w-16 h-16 rounded-xl object-cover border-2 border-slate-200 group-hover:border-blue-300 transition-colors duration-300"
                      />
                    </div>
                    <div class="flex-1 min-w-0">
                      <h3 class="text-sm font-bold text-slate-900 line-clamp-2 group-hover:text-blue-600 transition-colors duration-300">
                        {popular.title}
                      </h3>
                      <p class="text-xs text-slate-600 mt-2 font-medium">
                        {popular.author.name}
                      </p>
                      <div class="flex items-center space-x-2 mt-2 text-xs text-slate-500">
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                        <span>{popular.views}</span>
                      </div>
                    </div>
                  </a>
                  {index < populares.length - 1 && (
                    <div class="mt-6 border-b border-slate-200"></div>
                  )}
                </div>
              ))}
            </div>
          </div>
        </aside>
      </div>
    </div>
  </section>

  <!-- Call to Action Section -->
  <section class="relative py-16 bg-gradient-to-br from-slate-900 via-blue-900 to-indigo-900 overflow-hidden">
    <!-- Background Effects -->
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-r from-blue-600/10 to-purple-600/10"></div>
      <div class="absolute top-0 left-0 w-full h-full opacity-10">
        {Array.from({length: 15}).map((_, i) => (
          <div 
            class="absolute w-1 h-1 bg-white rounded-full animate-pulse"
            style={`top: ${Math.random() * 100}%; left: ${Math.random() * 100}%; animation-delay: ${Math.random() * 3}s`}
          ></div>
        ))}
      </div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-black text-white mb-6 tracking-tight">
        {t('blogDetail.read_more')}
      </h2>
      
      <p class="max-w-2xl mx-auto text-xl text-blue-100 mb-8 leading-relaxed">
        {t('blogDetail.read_more_description')}
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a 
          href={lang === 'es' ? '/blog' : `/${lang}/blog`}
          class="group inline-flex items-center space-x-3 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white px-8 py-4 rounded-2xl font-bold text-lg transition-all duration-300 shadow-xl hover:shadow-2xl hover:-translate-y-1"
        >
          <span>{t('blogDetail.explore')}</span>
          <svg class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
        
        <a 
          href={lang === 'es' ? '/contactanos' : `/${lang}/contactanos`}
          class="group inline-flex items-center space-x-3 bg-transparent border-2 border-white/30 hover:border-white text-white px-8 py-4 rounded-2xl font-bold text-lg transition-all duration-300 hover:bg-white/10"
        >
          <span>{t('blogDetail.contact')}</span>
          <svg class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>