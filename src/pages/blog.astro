---
// blog.astro - Blog page
import BaseLayout from '../layouts/BaseLayout.astro';

---

<BaseLayout 
  title="Blog - Elipson Synergy" 
  description="Lee nuestros últimos artículos, noticias y actualizaciones en el blog de Elipson Synergy."
>
  <div class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-bold text-gray-900 sm:text-5xl md:text-6xl">
          <span class="block">Nuestro</span>
          <span class="block text-blue-600 mt-2">Blog</span>
        </h1>
      </div>
    </div>
  </div>
</BaseLayout> 